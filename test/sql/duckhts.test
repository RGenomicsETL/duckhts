# ==============================================================
# read_gff – GFF3 reader
# ==============================================================

# --- record count ---
query I
SELECT count(*) FROM read_gff('__WORKING_DIRECTORY__/third_party/htslib/test/tabix/gff_file.gff');
----
62

# --- first row ---
query IIIII
SELECT seqname, source, feature, start, "end" FROM read_gff('__WORKING_DIRECTORY__/third_party/htslib/test/tabix/gff_file.gff') LIMIT 1;
----
X	Vega	exon	2934816	2935190

# --- projection pushdown: single column ---
query I
SELECT feature FROM read_gff('__WORKING_DIRECTORY__/third_party/htslib/test/tabix/gff_file.gff') LIMIT 1;
----
exon

# --- feature counts ---
query II
SELECT feature, count(*) as cnt FROM read_gff('__WORKING_DIRECTORY__/third_party/htslib/test/tabix/gff_file.gff') GROUP BY feature ORDER BY cnt DESC;
----
exon	23
intron	19
CDS	15
transcript	4
gene	1

